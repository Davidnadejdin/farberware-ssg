---
const path = import.meta.env.PUBLIC_URL;
---

<footer class="footer">
    <div class="footer__container">
        <a href=`${path}` class="footer__logo">
            <img src=`${path}assets/img/logo-footer.png` width="60" height="11">
        </a>
        <ul class="footer__nav">
            <li class="footer__nav-item">
                <a href=`${path}` class="footer__nav-link">Home</a>
            </li>
            <li class="footer__nav-item">
                <a href=`${path}#category` class="footer__nav-link">Category</a>
            </li>
            <li class="footer__nav-item">
                <a href=`${path}about` class="footer__nav-link">About the Brand</a>
            </li>
            <li class="footer__nav-item">
                <a href=`${path}contacts` class="footer__nav-link">Contacts</a>
            </li>
        </ul>
        <div class="footer__copyright">
        </div>
        <ul class="footer__socials">
            <li class="footer__socials-item">
                <a href="#">
                    <img src=`${path}assets/img/youtube.svg` width="32" height="32" alt="youtube">
                </a>
            </li>
            <li class="footer__socials-item">
                <a href="#">
                    <img src=`${path}assets/img/facebook.svg` width="27" height="27" alt="facebook">
                </a>
            </li>
        </ul>
    </div>
</footer>